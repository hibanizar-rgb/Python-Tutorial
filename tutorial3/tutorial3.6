

import tkinter as tk

def convert_to_uppercase():
    input_text = input_var.get()
    output_var.set(input_text.upper())

# Create the main window
root = tk.Tk()
root.title("Uppercase Converter")

# Variables for input and output
input_var = tk.StringVar()
output_var = tk.StringVar()

# Label and Entry for input
tk.Label(root, text="Enter text:").grid(row=0, column=0, padx=10, pady=5)
tk.Entry(root, textvariable=input_var, width=40).grid(row=0, column=1, padx=10, pady=5)

# Button to convert
tk.Button(root, text="Convert to UPPERCASE", command=convert_to_uppercase).grid(row=1, column=0, columnspan=2, pady=10)

# Label and Entry for output
tk.Label(root, text="Uppercase:").grid(row=2, column=0, padx=10, pady=5)
tk.Entry(root, textvariable=output_var, width=40, state='readonly').grid(row=2, column=1, padx=10, pady=5)

# Run the GUI loop
root.mainloop()