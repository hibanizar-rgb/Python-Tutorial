
import turtle

# Set up the screen
screen = turtle.Screen()
screen.bgcolor("white")  # You can change background color

# Create a turtle
circle_turtle = turtle.Turtle()
circle_turtle.color("blue")  # Set turtle color
circle_turtle.pensize(2)     # Set pen size

# Draw a circle with radius 100
circle_turtle.circle(100)

# Keep the window open until clicked
screen.exitonclick