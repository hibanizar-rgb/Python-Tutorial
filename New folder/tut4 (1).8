


class Book:
    def _init_(self):
        self.title = ""
        self.author = ""
        self.cost = 0.0

    def get_details(self):
        self.title = input("Enter book title: ")
        self.author = input("Enter author name: ")
        self.cost = float(input("Enter cost of the book: "))

    def print_details(self):
        print("\nBook Details:")
        print(f"Title: {self.title}")
        print(f"Author: {self.author}")
        print(f"Cost: â‚¹{self.cost:.2f}")


# Create an object of Book class
my_book = Book()

# Invoke the methods
my_book.get_details()
my_book.print_details()