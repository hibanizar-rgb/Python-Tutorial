


lass Arith:
    def __init__(self):
        self.a = 0
        self.b = 0

    # Method to read two numbers
    def read(self):
        self.a = float(input("Enter first number: "))
        self.b = float(input("Enter second number: "))

    # Method to add numbers
    def add(self):
        return self.a + self.b

    # Additional methods (optional)
    def subtract(self):
        return self.a - self.b

    def multiply(self):
        return self.a * self.b

    def divide(self):
        if self.b != 0:
            return self.a / self.b
        else:
            return "Division by zero error"

# Usage
obj = Arith()
obj.read()

print("\nSum:", obj.add())
print("Difference:", obj.subtract())
print("Product:", obj.multiply())
print("Quotient:", obj.divide())